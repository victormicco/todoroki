{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "outDir": "dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,

    "lib": ["es2022"],

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    "types": ["vitest/globals"]
  }
}
